	<ItemGroup>
		<EmbeddedResource Include="manifest.json" />
		<EmbeddedResource Include="Resources\cherry.png" />
		<EmbeddedResource Include="Views\open-settings-view.bsml" />
		<EmbeddedResource Include="Views\request-view.bsml" />
